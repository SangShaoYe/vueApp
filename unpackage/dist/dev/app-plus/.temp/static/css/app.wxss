
page {
  min-height: 100%;
}
.header-container {
  display: flex;
  align-items: center;
  color: white;
  padding: 60rpx 10rpx 20rpx;
  font-size: 28rpx;
  position: fixed;
  width: 100%;
  height: 40rpx;
  left: 0;
  top: 0;
  z-index: 999;
}
.header-btns {
  width: 100rpx;
  text-align: center;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.header-back {
  width: 40rpx;
  height: 40rpx;
  margin-left: 10rpx;
}
.header-title {
  width: 100%;
  line-height: 52rpx;
  text-align: center;
}
.header-container  .icon {
  color: white;
  padding: 0 10rpx;
}
.header-search-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  background: white;
  border-radius: 30rpx;
}
.header-search-icon {
  width: 30rpx;
  height: 30rpx;
  margin: 0 20rpx;
}
.header-search-content {
  width: 100%;
}
.body-container {
  font-size: 28rpx;
}
@font-face {
  font-family: 'icomoon';
  src: url('https://www.zgsj1.com/Public/fm_static/bg_img/icomoon_font/icomoon.eot');
  src: url('https://www.zgsj1.com/Public/fm_static/bg_img/icomoon_font/icomoon.eot') format('embedded-opentype'),
	url('https://www.zgsj1.com/Public/fm_static/bg_img/icomoon_font/icomoon.ttf') format('truetype'),
	url('https://www.zgsj1.com/Public/fm_static/bg_img/icomoon_font/icomoon.woff') format('woff'),
	url('https://www.zgsj1.com/Public/fm_static/bg_img/icomoon_font/icomoon.svg') format('svg');
  font-weight: normal;
  font-style: normal;
}
[class^="icon-"],
[class*=" icon-"] {
  font-family: 'icomoon' !important;
  speak: none;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
